@model List<Common.DTO.DtoPedido>

@{
    ViewBag.Title = "ListadoPedidosCliEnPrep";
}

<h2>Pedidos pendientes o en preparación</h2>

<p>
    @Html.ActionLink("Volver", "ListadoPedidosCli", "Pedido", new { @class = "btn btn-primary" })
</p> 
<table class="table">
    <thead>
        <tr>
            <th>
                Estado
            </th>
            <th>
                Precio total
            </th>
            <th>
                Número
            </th>
            <th>
                Usuario
            </th>
            <th>
                Dirección
            </th>
            <th>
                Fecha de ingreso
            </th>
            <th>
                Urgente
            </th>

            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Urgente)
                </td>

                <td>
                    @Html.ActionLink("Cancelar pedido", "CancelarPedido", new { idPedido = item.Numero }, new { @class = "btn btn-danger" })  |

                </td>
            </tr>
        }
    </tbody>

</table>
