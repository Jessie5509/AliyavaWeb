@model List<Common.DTO.DtoProducto>

@{
    ViewBag.Title = "CarritoView";
    
}

<h2>Carrito</h2>


<table class="table">
    <thead>
        <tr>

            <th>
                Código de barras
            </th>
            <th>
                Descripción
            </th>
            <th>
                Familia
            </th>
            <th>
                Precio de venta
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>

        @foreach (Common.DTO.DtoProducto item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.codigoBarras)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Familia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>

                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    @Html.ActionLink("Eliminar", "RemoveProducto", new { Codigo = item.Codigo }, new { @class = "btn btn-danger" })


                </td>
            </tr>
        }
    </tbody>

</table>

<div>

    @Html.CheckBox("check")
    <label for="check" style="display:inline">Urgente</label>
    <br />

    @Html.ActionLink("Realizar pedido", "RealizarPedido", "Pedido", new { colProductosPedidos = Model, urgente = "check" },
                                  new { @class = "btn btn-primary" })


</div>

