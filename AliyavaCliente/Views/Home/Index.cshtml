@model List<Common.DTO.DtoProducto>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Aliyava Clientes</h1>

</div>

<script src="~/Scripts/jquery-3.5.1.js"></script>
<script>

    $(document).ready(function () {

        $("#id_DropDownList").change(function () {
            var familiaSelect = $("#id_DropDownList").val();

            $.ajax({
                type: "POST",
                url: "https://localhost:44377/Home/FiltrarFamilia?familia=" + familiaSelect,
                success: function (data) {

                    $('#searchable-container').html(data);
                }
            });
        });
    });




</script>



<div class="row">
    <div>
        <h2>Productos</h2>

    </div>


    @using (Html.BeginForm())
    {
        <div class="navbar  navbar-fixed-top" style="top:10px; left:1650px">
            <p>
                @Html.TextBox("SearchString", null, new { @class = "search_input" })
                <input type="submit" value="Buscar" />
            </p>
        </div>

        <div id="FamiliS">
            <div class="col-md-10">
                @Html.DropDownList("id_DropDownList", (ICollection<SelectListItem>)ViewBag.colFamilias, "-- Familia --", new { @class = "form-control" })
            </div>
            <br />

        </div>

        <p>
            @Html.ActionLink("Ordenar precios", "Index", new { sortOrder = ViewBag.PriceSort, currentFilter = ViewBag.CurrentFilter }, new { @class = "btn btn-primary" })
        </p>





    }

    <div>
        <div class="row" style="height:5000px; background-color: rgb(181, 181, 187);">
            <div class="container" id="searchable-container">

                @{
                    Html.RenderPartial("_listaProductos");

                }

            </div>
        </div>
    </div>

</div>
