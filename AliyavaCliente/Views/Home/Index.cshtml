@model List<Common.DTO.DtoProducto>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Aliyava Clientes</h1>

</div>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script>

    $(document).ready(function () {

        $("#id_DropDownList").change(function () {
            var familiaSelect = $("#id_DropDownList").val();

            $.ajax({
                type: "POST",
                url: "https://localhost:44377/Home/FiltrarFamilia?familia=" + familiaSelect,
                success: function (data) {

                    $('#searchable-container').html(data);
                }
            });
        });
    });




</script>



<div class="row">
    <div>
        <h2>Productos</h2>

    </div>


    @using (Html.BeginForm())
    {
        <div class="navbar-fixed-top navbar-collapse collapse navbar-header" style="margin-top:0.8%; margin-left:80%">
            <ul class="nav navbar-nav">
                <li>@Html.TextBox("SearchString", null, new { @class = "search_input" })</li>
                <li><input type="submit" value="Search" /></li>
            </ul>
        </div>

        <div id="FamiliS">
            <div class="col-md-10">
                @Html.DropDownList("id_DropDownList", (ICollection<SelectListItem>)ViewBag.colFamilias, "-- Familia --", new { @class = "form-control" })
            </div>

        </div>

        <p>
            @Html.ActionLink("Precio", "Index", new { sortOrder = ViewBag.PriceSort, currentFilter = ViewBag.CurrentFilter })
        </p>





    }

    <div>
        <div class="row" style="height:5000px; background-color: rgba(255,0,0,0.1);">
            <div class="container" id="searchable-container">
               @{
                   Html.RenderPartial("_listaProductos");

                }

            </div>
        </div>
    </div>

</div>


