@model Common.DTO.DtoReparto

@{
    ViewBag.Title = "RegistroReparto";
}

<h2>Agregar nuevo reparto</h2>

@using (Html.BeginForm("AddReparto", "Reparto")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   
        <div class="form-group">
            @Html.LabelFor(model => model.MatriculaVehiculo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatriculaVehiculo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatriculaVehiculo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Chofer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Chofer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Chofer, "", new { @class = "text-danger" })
            </div>
        </div>

      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
                @Html.ActionLink("Repartos", "ListadoRepartos", "Reparto", new { @class = "btn btn-primary" })
                <br />
                <br />
                @if (ViewBag.Rep != null)
                {
                    <h4>@Html.Label("", (string)ViewBag.Rep, new { @class = "label label-primary" })</h4>
                }
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a inicio", "Index", "Home", new { @class = "btn btn-info" })
</div>
