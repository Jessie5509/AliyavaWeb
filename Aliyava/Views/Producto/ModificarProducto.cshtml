        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirmar Cambios" class="btn btn-default" />
            @Html.ActionLink("Listado", "ListarProducto", "Producto", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
