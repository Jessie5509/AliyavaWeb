@model IEnumerable<Common.DTO.DtoProducto>

@{
    ViewBag.Title = "ListarProducto";
}

<h2>ListarProducto</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Familia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioVenta)
        </th>
        <th></th>
    </tr>

@foreach (Common.DTO.DtoProducto item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Codigo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Familia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrecioVenta)
    </td>
    <td>
        @Html.ActionLink("Eliminar", "RemoveProducto", new { Codigo = item.Codigo })
        @Html.ActionLink("Modificar", "ModificarProducto", new { Codigo = item.Codigo })
    </td>
</tr>
}

</table>
