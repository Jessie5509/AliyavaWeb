@model List<Common.DTO.DtoProducto>

@{
    ViewBag.Title = "ListarProducto";
}

<h2>Lista de productos</h2>

<p>
    @Html.ActionLink("Agregar productos", "RegistrarProducto", "Producto", new { @class = "btn btn-primary" })
</p>



<table class="table">
    <thead>
        <tr>
            <th>

                Código
            </th>
            <th>
                Código de barras
            </th>
            <th>
                Descripción
            </th>
            <th>
                Familia
            </th>
            <th>
                Precio de venta
            </th>
            <th>
                Descripcion Producto
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Common.DTO.DtoProducto item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigoBarras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Familia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProDescripcion)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "RemoveProducto", new { Codigo = item.Codigo }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Modificar", "ModificarProducto", new { Codigo = item.Codigo }, new { @class = "btn btn-primary" })
            </td>
        </tr>
        }
    </tbody>

</table>
