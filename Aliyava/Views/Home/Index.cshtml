@model List<Common.DTO.DtoProducto>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Funcionarios</h1>

</div>

<div class="row">
    <div>
        <h2>Productos</h2>

    </div>


    @using (Html.BeginForm())
    {
        <div class="navbar  navbar-fixed-top" style="top:10px; left:1650px">
            <p>
                @Html.TextBox("SearchString", null, new { @class = "search_input" })
                <input type="submit" value="Search" />
            </p>
        </div>


        <p>
            @Html.ActionLink("Precio", "Index", new { sortOrder = ViewBag.PriceSort, currentFilter = ViewBag.CurrentFilter })
        </p>





    }

    <div>
        <div class="row" style="height:5000px; background-color: rgba(255,0,0,0.1);">
            <div class="container" id="searchable-container">
                @foreach (Common.DTO.DtoProducto item in Model)
                {


                    <div class="card">
                        <div id="card" class="panel panel-default " style="width: 250px; height: 250px; float:left;margin:10px; background-color: rgba(0,0,255,.1)">

                            <div id="portada" class="card-title">@Html.DisplayFor(modelItem => item.Descripcion)</div>

                            <div class="panel-body" style="width: 200px; height: 200px;">
                                <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.ImagenPro)" style="width:auto; height: 175px;">

                            </div>
                            <div class="panel-footer">
                                <p>$ @Html.DisplayFor(modelItem => item.PrecioVenta)</p>
                                <p id="contenido">@Html.DisplayFor(modelItem => item.ProDescripcion)</p>

                                @Html.ActionLink("Ver", "ProductoInfo", "Home", new { id = item.Codigo }, new { @class = "btn btn-info" })
                            </div>


                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</div>